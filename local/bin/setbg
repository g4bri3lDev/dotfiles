#!/bin/sh
# Sets the background. If given an argument, will set file as background.
[ ! -z "$1" ] && cp "$1" ~/.dotfiles/config/wall.png && notify-send -i "$HOME/.dotfiles/config/wall.png" "Wallpaper changed."
wal -i "~/.dotfiles/config/wall.png" >/dev/null 2>&1
xwallpaper --zoom ~/.dotfiles/config/wall.png
